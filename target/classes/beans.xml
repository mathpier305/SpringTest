<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
	
	<bean id="student_bean" class="com.matt.Student" scope="prototype">
		<constructor-arg ref="address_bean"></constructor-arg>
	</bean>
	
	<bean id="address_bean" class="com.matt.Address" scope="prototype">
		<property name="address" value="Wall Street 12"></property>
	</bean>
	
	

</beans>
